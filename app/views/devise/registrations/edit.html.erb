<div class="container mt-5">
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        <h2>Editar cuenta</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-lg', placeholder: "Correo electrónico"  %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Actualmente en espera de confirmación para: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <i>(dejar en blanco si no quieres cambiarlo)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control input-lg', placeholder: "Nueva contraseña" %>
            <% if @minimum_password_length %>
              <br />
              <em> Mínimo <%= @minimum_password_length %> caracteres</em>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control input-lg', placeholder: "Confirmar nueva contraseña"  %>
          </div>

          <div class="form-group">
            <i>(Necesitamos su contraseña actual para confirmar sus cambios)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control input-lg', placeholder: "Contraseña actual"  %>
          </div>

          <div class="actions">
            <%= f.submit "Actualizar", class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>

        <h3 class="mt-3">Cancelar mi cuenta</h3>

        <p>No se siente agusto? <%= button_to 'Cancelar mi cuenta', registration_path(resource_name), class: 'btn btn-outline-danger btn-lg', data: { confirm: "Esta seguro?" }, method: :delete %></p>

        <%= link_to "Volver", :back %>
      </div>

      <div class="col-2"></div>  
    
  </div>
</div>
