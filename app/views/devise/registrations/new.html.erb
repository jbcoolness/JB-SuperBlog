<header>
  <%= render 'posts/navbar' %>
</header>
<div class="container mt-5">
  <div class="row">
    <div class="col-2"></div>
      <div class="col-8 sesion-devise">
        <h2>Regístrarse</h2>

        <div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-lg', placeholder: "Correo electrónico" %>
            </div>

            <div class="form-group">              
              <% if @minimum_password_length %>
              <em>( Mínimo <%= @minimum_password_length %> caracteres )</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control input-lg', placeholder: "Contraseña" %>
            </div>

            <div class="form-group">              
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control input-lg', placeholder: "Confirmar Contraseña" %>
            </div>

            <div class="actions mt-4">
              <%= f.submit "Registrar", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
          </div>
  1
        <%= render "devise/shared/links" %>
      </div>
      <div class="col-2"></div>
    </div>
  </div>
</div>
