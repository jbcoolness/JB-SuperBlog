<header>
    <%= render 'posts/navbar' %>
</header>
<div class="container pt-5">
  <div class="row">
    <div class="col">
      
      <h1><%= @post.new_record? ? "Nuevo Post" : "Editar Post" %></h1>
      <div class="col-sm-5">
        <% if @post.errors.any? %>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li class="list-group-item list-group-item-danger"> <%= message %> </li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: 'form-control form-control-lg', placeholder: "Titulo del post" %>
        </div>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control form-control-lg', rows: 10, placeholder: "Contenido del post" %>
        </div>
        <div class="form-group">
          <%= f.text_field :image, class: 'form-control form-control-lg', placeholder: "URL de la imagen para el post" %>
        </div>
        <div class="action">
          <%= f.submit @post.new_record? ? "Crear Post" : "Editar Post", class: "btn btn-primary btn-lg" %>
          <%= link_to  "Volver", root_path, class: "btn btn-link" %>
        </div>
      <% end %>
    
    </div>
  </div>
</div>