<div class="container">
  <div class="row">
    <div class="col">
      
      <h1><%= @post.new_record? ? "Nuevo Post" : "Editar Post" %></h1>
      <p>Here you can write your post.</p>
      
      <% if @post.errors.any? %>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: 'form-control form-control-lg', placeholder: "Titulo del post" %>
        </div>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control form-control-lg', placeholder: "Contenido del post" %>
        </div>
        <div class="form-group">
          <%= f.text_field :image, class: 'form-control form-control-lg', placeholder: "URL de la imagen para el post" %>
        </div>
        <div class="action">
          <%= f.submit @post.new_record? ? "Crear Post" : "Editar Post", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    
    </div>
  </div>
</div>