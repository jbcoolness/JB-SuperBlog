<div class="container pt-5">
    <div class="row">
        <div class="col">
            <h1> <%= @post.title %> </h1>
            <footer class="blockquote-footer mb-3">Publicado: <%= @post.updated_at.to_formatted_s(:long) %>, por <cite title="Source Title"> <%= @post.user.username %> </cite></footer>
            <img src="<%= @post.image %>" class="img-fluid" alt="Responsive image">

            <p class="mt-3 mb-5"> <%= @post.content %> </p>
        </div>
    </div>
</div>