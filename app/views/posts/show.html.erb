<div class="container">
    <div class="row">
        <div class="col">
            <h1> <%= @post.title %> </h1>
            <footer class="blockquote-footer mb-3"><%= @post.updated_at %> <cite title="Source Title"> <%= @post.user_id %> </cite></footer>
            <img src="<%= @post.image %>" class="img-fluid" alt="Responsive image">

            <p class="mt-3"><%= @post.content %></p>
        </div>
    </div>
</div>