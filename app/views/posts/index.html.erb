<div class="container">
    <div class="row">
        <div class="col">
            <% @posts.each do |post| %>
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                  <div class="col-md-4">
                    <img src="<%= post.image %>" class="card-img" alt="...">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"> <%= post.title %> </h5>
                      <p class="card-text"><small class="text-muted">post.user_id</small></p>
                      <p class="card-text"> <%= post.content %> </p>
                      
                    </div>
                  </div>
                </div>
              </div>

            <% end %>


        </div>
    </div>
</div>