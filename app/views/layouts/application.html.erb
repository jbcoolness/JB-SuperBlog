<!DOCTYPE html>
<html>
  <head>
    <title>JBSuperblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- HEADER -->
    <header>
      <%= render 'posts/navbar' %>
    </header>

    
    <div class="alerts text-center">
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
    <!-- <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> -->

    
    <%= yield %>
    

    <!-- alerts -->
    <script>
        $(".alert").fadeIn(500).css("opacity", "0.85").delay(6000).slideUp(1000);
        $(".alerts").on('click', '.alert', function(){ $(this).remove() });
    </script>
    <!-- alerts -->
  
  </body>
</html>
